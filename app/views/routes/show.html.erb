<p id="notice"><%= notice %></p>

<div>
  <h2><%= @route.name %></h2>
</div>
<hr>
<div>
  <h3>Поезда на маршруте:</h3>
  <% if @route.trains.empty? %>
    Поезда отсутствуют
  <% else %>
    <table>
    <% @route.trains.each do |train| %>
      <tr>
        <td> № </td>
        <td><%= link_to train.number, edit_train_path(train) %></td>
      </tr>
    <% end %>
    </table>
  <% end %>
</div>

<div>
  <h3>Станции маршрута:</h3>
  <% if @route.railway_stations.empty? %>
    Станции не назначены
  <% else %>
    <table>
    <% @route.railway_stations.ordered.each do |station| %>
      <tr>
        <td><%= link_to station.title, edit_railway_station_path(station) %></td>
        <td><%= station.id %></td>
        <td>
          <%= form_tag update_position_path do %>
            <%= hidden_field_tag :station, station.id %>
            <%= text_field_tag :position, station.get_position(@route), size: 3 %>
            <%= submit_tag 'Установить' %>
          <% end %>
        </td>
      <tr>
    <% end %>
    </table>
  <% end %>
</div>

<br />
<hr>
<div>
  <%= link_to 'Редактировать', edit_route_path(@route) %> |
  <%= link_to 'Назад', routes_path %>
</div>
