<%= form_for(route) do |f| %>
  <%= render 'common/errors', resource: @route %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="filed">
    <%= f.label :railway_station_ids, "Станции маршрута:" %>
    <%= f.collection_select :railway_station_ids, RailwayStation.all, :id, :title, {}, { multiple: true } %>
  </div>

  <div class="actions">
    <%= f.submit 'Отправить'%>
  </div>
<% end %>
