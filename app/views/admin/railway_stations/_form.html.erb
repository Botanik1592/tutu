<%= render 'common/errors', resource: station %>
<div class="row">
  <div class="col-md-6">
    <% hidden = false unless local_assigns[:hidden] %>
    <%= form_for [:admin, station], html: { style: "display: #{hidden ? 'none' : 'block'}" } do |f| %>
      <div>
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <br />
      <div class="actions">
        <%= f.submit t('.submit', action: station.new_record? ? 'Создать' : 'Изменить'), class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
<br />
