<%= render 'common/errors', resource: @route %>
<div class="row">
  <div class="col-md-4">
    <%= form_for [:admin, route] do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <br />
      <%= f.label :railway_station_ids %><br />
      <%= f.collection_select :railway_station_ids, RailwayStation.all, :id, :title, {}, { multiple: true } %>
      <br />
      <%= f.submit t('.submit', action: @route.new_record? ? 'Создать' : 'Изменить'), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
<br />
