<div class="page-header">
  <h1><%= t('.title') %> <small></small></h1>
</div>

<table class="table table-striped">
  <thead>
    <th><%= t('admin.users.attributes.index') %></th>
    <th><%= t('admin.users.attributes.name') %></th>
    <th><%= t('admin.users.attributes.last_name') %></th>
    <th><%= t('admin.users.attributes.email') %></th>
    <th collspan="2"></th>
  </thead>
  <% @users.each_with_index do |user, i| %>
    <tr>
      <td><%= i %></td>
      <td><%= user.name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.email %></td>
      <td><%= link_to t('common.edit'), edit_admin_user_path(user) %></td>
      <td><%= link_to t('common.delete'), [:admin, user], method: :delete, data: { confirm: t('common.confirm') }%></td>
    </tr>
  <% end %>
</table>
