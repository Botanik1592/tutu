<div class="page-header">
  <h1><%= t('.title') %> <small></small></h1>
</div>

<table class="table table-striped">
  <thead>
    <th><%= t('admin.users.attributes.index') %></th>
    <th><%= t('admin.users.attributes.name') %></th>
    <th><%= t('admin.users.attributes.last_name') %></th>
    <th><%= t('admin.users.attributes.email') %></th>
    <th collspan="2"></th>
  </thead>
  <% @users.each_with_index do |user, i| %>
    <tr>
      <td><h4><%= i %></h4></td>
      <td><h4><%= user.name %></h4></td>
      <td><h4><%= user.last_name %></h4></td>
      <td><h4><%= user.email %></h4></td>
      <td><%= link_to t('common.edit'), edit_admin_user_path(user), class: "btn btn-warning" %></td>
      <td><%= link_to t('common.delete'), [:admin, user], class: "btn btn-danger", method: :delete, data: { confirm: t('common.confirm') }%></td>
    </tr>
  <% end %>
</table>
