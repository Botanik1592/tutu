<%= form_for [:admin, user] do |f| %>
  <%= render 'common/errors', resource: @user %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br /><br />
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
    <br /><br />
    <%= f.label :email %>
    <%= f.text_field :email %>
    <br /><br />
    <%= f.submit t('common.update'), class: 'btn btn-primary' %>
  </div>
<% end %>
