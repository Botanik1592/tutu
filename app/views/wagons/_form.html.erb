<%= form_for(wagon) do |f| %>
  <%= render 'common/errors', resource: @wagon %>
  <div class="field">
    <%= f.label :number, "Номер:" %>
    <%= f.text_field :number %>
  </div>

  <div class="filed">
    <%= f.label :train, "Поезд:" %>
    <%= f.collection_select :train_id, Train.all, :id, :number %>
  </div>
  <br>
  <div class="filed">
    <%= f.label :wagon_type, "Тип:" %>
    <%= f.collection_select :wagon_type_id, WagonType.all, :id, :wagon_type %>
  </div>
  <br>
  <div class="filed">
    <%= f.label :top_places, "Кол-во верхних мест:" %>
    <%= f.text_field :top_places %>
  </div>
  <br>
  <div class="filed">
    <%= f.label :lower_places, "Кол-во нижних мест:" %>
    <%= f.text_field :lower_places %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "#{ @wagon.new_record? ? 'Создать' : 'Изменить'}"%>
  </div>
<% end %>
